# Nivo - Environment Configuration Template
# Copy this file to .env and update values as needed
#
# IMPORTANT: The following variables are REQUIRED (no defaults):
#   - DATABASE_PASSWORD
#   - JWT_SECRET
#
# Generate secure values:
#   openssl rand -base64 32  # For JWT_SECRET
#   openssl rand -base64 24  # For passwords

# =============================================================================
# REQUIRED CONFIGURATION (must be set)
# =============================================================================

# Database password - REQUIRED
# Generate with: openssl rand -base64 24
DATABASE_PASSWORD=CHANGE_ME_use_strong_password

# JWT signing secret - REQUIRED
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_32

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=nivo
DATABASE_NAME=nivo
DATABASE_SSL_MODE=disable

# Legacy variable names (for docker-compose compatibility)
POSTGRES_USER=nivo
POSTGRES_PASSWORD=CHANGE_ME_use_strong_password
POSTGRES_DB=nivo
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_use_strong_password
REDIS_DB=0

# =============================================================================
# NSQ CONFIGURATION
# =============================================================================

NSQLOOKUPD_ADDR=localhost:4161
NSQD_ADDR=localhost:4150
NSQLOOKUPD_TCP_PORT=4160
NSQLOOKUPD_HTTP_PORT=4161
NSQD_TCP_PORT=4150
NSQD_HTTP_PORT=4151
NSQADMIN_PORT=4171

# =============================================================================
# SERVICE PORTS
# =============================================================================

IDENTITY_PORT=8080
LEDGER_PORT=8081
RBAC_PORT=8082
WALLET_PORT=8083
TRANSACTION_PORT=8084
RISK_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8087
SIMULATION_SERVICE_PORT=8088
GATEWAY_PORT=8000

# =============================================================================
# OBSERVABILITY
# =============================================================================

PROMETHEUS_PORT=9090
ENABLE_PROFILING=false

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# =============================================================================
# LOCALIZATION (India-centric defaults)
# =============================================================================

TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR
COUNTRY_CODE=IN

# =============================================================================
# APPLICATION
# =============================================================================

ENVIRONMENT=development
LOG_LEVEL=debug
